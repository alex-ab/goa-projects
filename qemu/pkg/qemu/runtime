<runtime ram="128M" caps="1000" binary="qemu-system-arm">

	<requires>
		<timer/>
		<rtc/>
	</requires>

	<config>
		<libc stdout="/dev/log"
		      stderr="/dev/log"
		      pipe="/pipe"
		      rtc="/dev/rtc" />

		<vfs>
			<dir name="dev">
				<rtc/> <log/>
			</dir>
			<dir name="pipe">
				<pipe/>
			</dir>
		</vfs>
		<arg value="qemu-system-aarch64"/>
		<arg value="--help"/>
	</config>

	<content>
		<rom label="qemu-system-arm"/>
		<rom label="qemu-system-aarch64"/>
		<rom label="ffi.lib.so"/>
